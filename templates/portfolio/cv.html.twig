{% extends 'base.html.twig' %}

{% block title %}CV - Noely Bernard Mnyambwa{% endblock %}

{% block body %}
<section class="cv-section" style="padding-top: 150px;">
    <div class="container">
        <!-- CV Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold" style="color: var(--primary-color);">NOELY BERNARD MNYAMBWA</h1>
            <div class="contact-info mt-3">
                <p class="lead">
                    <i class="fas fa-envelope me-2"></i> mnyambwanoel123@gmail.com | 
                    <i class="fas fa-phone me-2"></i> +255 789 256 398 | 
                    <i class="fas fa-map-marker-alt me-2"></i> Dar es Salaam, Tanzania
                </p>
            </div>
            <div class="mt-4">
                <a href="{{ path('app_contact') }}" class="btn btn-primary-custom me-3">
                    <i class="fas fa-paper-plane me-2"></i> Hire Me
                </a>
                <button onclick="window.print()" class="btn btn-outline-primary-custom">
                    <i class="fas fa-print me-2"></i> Print CV
                </button>
            </div>
        </div>

        <!-- CV Content -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card card-hover shadow-lg border-0">
                    <div class="card-body p-5">
                        
                        <!-- Professional Summary -->
                        <div class="mb-5">
                            <h2 class="section-title" style="text-align: left;">Professional Summary</h2>
                            <p class="fs-5">
                                A diploma holder with full certificate and a bachelor degree completed in 2025 which is not yet awarded; 
                                currently waiting for issuance. Passionate about technology with hands-on experience in IT support and networking.
                            </p>
                        </div>

                        <!-- Education -->
                        <div class="mb-5">
                            <h2 class="section-title" style="text-align: left;">Education</h2>
                            {% if education|length > 0 %}
                                {% for edu in education %}
                                    {% if edu.isActive %}
                                    <div class="card bg-light border-0 p-4 mb-3">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <h4 class="fw-bold" style="color: var(--primary-color);">
                                                    {{ edu.fieldOfStudy }}{% if edu.gpa %} (GPA: {{ edu.gpa }}){% endif %}
                                                </h4>
                                                <h5 style="font-weight: 900; color: #333;">{{ edu.school }}</h5>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <span class="badge bg-secondary fs-6">
                                                    {% if edu.startDate %}{{ edu.startDate|date('M Y') }}{% endif %}
                                                    {% if edu.endDate %} - {{ edu.endDate|date('M Y') }}{% endif %}
                                                </span>
                                            </div>
                                        </div>
                                        {% if edu.description %}
                                        <p class="mt-3">{{ edu.description }}</p>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <div class="card bg-light border-0 p-4">
                                    <p class="text-muted">No education records found.</p>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Work Experience -->
                        <div class="mb-5">
                            <h2 class="section-title" style="text-align: left;">Work Experience</h2>
                            {% if workExperience|length > 0 %}
                                {% for work in workExperience %}
                                    {% if work.isActive %}
                                    <div class="card bg-light border-0 p-4 mb-3">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <h4 class="fw-bold" style="color: var(--primary-color);">{{ work.position }}</h4>
                                                <h5 class="text-muted">{{ work.company }}</h5>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <span class="badge bg-secondary fs-6">
                                                    {% if work.startDate %}{{ work.startDate|date('M Y') }}{% endif %}
                                                    {% if work.endDate %} - {{ work.endDate|date('M Y') }}{% endif %}
                                                    {% if work.isCurrent %}<br><span class="badge bg-success mt-1">Currently Working</span>{% endif %}
                                                </span>
                                            </div>
                                        </div>
                                        {% if work.description %}
                                        <p class="mt-3">{{ work.description }}</p>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <div class="card bg-light border-0 p-4">
                                    <p class="text-muted">No work experience records found.</p>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Skills & Interests -->
                        <div class="mb-5">
                            <h2 class="section-title" style="text-align: left;">Skills & Interests</h2>
                            {% set softSkillsDb = skills|filter(s => s.category == 'soft') %}
                            {% set technicalSkillsDb = skills|filter(s => s.category == 'technical') %}
                            {# Total technical skills count = 7 #}
                            {% set totalTechnicalSkillsCount = 7 %}
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="card border-0 h-100">
                                        <div class="card-body">
                                            <h4 class="card-title fw-bold" style="color: var(--primary-color);">
                                                <i class="fas fa-user-tie me-2"></i> Soft Skills
                                            </h4>
                                            <div class="mt-3">
                                                {# Database soft skills #}
                                                {% for skill in softSkillsDb %}
                                                    <span class="badge bg-primary fs-6 me-2 mb-2 p-2">{{ skill.name }}</span>
                                                {% endfor %}
                                                {# Hardcoded soft skills (always show) #}
                                                <span class="badge bg-primary fs-6 me-2 mb-2 p-2">Teamwork</span>
                                                <span class="badge bg-primary fs-6 me-2 mb-2 p-2">Communication</span>
                                                <span class="badge bg-primary fs-6 me-2 mb-2 p-2">Problem Solving</span>
                                                <span class="badge bg-primary fs-6 me-2 mb-2 p-2">Time Management</span>
                                                <span class="badge bg-primary fs-6 me-2 mb-2 p-2">Adaptability</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="card border-0 h-100">
                                        <div class="card-body">
                                            <h4 class="card-title fw-bold" style="color: var(--primary-color);">
                                                <i class="fas fa-tools me-2"></i> Technical Skills
                                            </h4>
                                            <div class="mt-3">
                                                {# Database technical skills #}
                                                {% for skill in technicalSkillsDb %}
                                                    <span class="badge bg-success fs-6 me-2 mb-2 p-2">{{ skill.name }}</span>
                                                {% endfor %}
                                                {# Hardcoded technical skills (always show) #}
                                                <span class="badge bg-success fs-6 me-2 mb-2 p-2">Troubleshooting</span>
                                                <span class="badge bg-success fs-6 me-2 mb-2 p-2">Networking</span>
                                                <span class="badge bg-success fs-6 me-2 mb-2 p-2">Fiber Optics</span>
                                                <span class="badge bg-success fs-6 me-2 mb-2 p-2">Web Development</span>
                                                <span class="badge bg-success fs-6 me-2 mb-2 p-2">IT Support</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4">
                                <h4 class="fw-bold" style="color: var(--primary-color);">
                                    <i class="fas fa-heart me-2"></i> Interests
                                </h4>
                                <p class="fs-5">Artificial Intelligence and Automation, Web Development, Network Security, Technology Trends, Open Source Projects</p>
                            </div>
                        </div>

                        <!-- Languages -->
                        <div class="mb-5">
                            <h2 class="section-title" style="text-align: left;">Languages</h2>
                            <div class="card bg-light border-0 p-4">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <h4 class="fw-bold mb-3" style="color: var(--primary-color);">English</h4>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Speaking</span>
                                                <span class="text-success">Excellent</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" style="width: 95%"></div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Writing</span>
                                                <span class="text-success">Excellent</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" style="width: 92%"></div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Reading</span>
                                                <span class="text-success">Excellent</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" style="width: 98%"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6 mb-4">
                                        <h4 class="fw-bold mb-3" style="color: var(--primary-color);">Swahili</h4>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Speaking</span>
                                                <span class="text-primary">Native</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-primary" style="width: 100%"></div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Writing</span>
                                                <span class="text-primary">Native</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-primary" style="width: 100%"></div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Reading</span>
                                                <span class="text-primary">Native</span>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-primary" style="width: 100%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- References -->
                        <div class="mb-4">
                            <h2 class="section-title" style="text-align: left;">References</h2>
                            {% if references|length > 0 %}
                                <div class="row">
                                    {% for ref in references %}
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <h5 class="card-title fw-bold" style="color: var(--primary-color);">{{ ref.name }}</h5>
                                                <p class="card-text">
                                                    {% if ref.phone %}<i class="fas fa-phone me-2"></i> {{ ref.phone }}<br>{% endif %}
                                                    {% if ref.email %}<i class="fas fa-envelope me-2"></i> <a href="mailto:{{ ref.email }}">{{ ref.email }}</a><br>{% endif %}
                                                    {% if ref.title and ref.company %}
                                                        <i class="fas fa-briefcase me-2"></i> {{ ref.title }} at {{ ref.company }}
                                                    {% elseif ref.title %}
                                                        <i class="fas fa-briefcase me-2"></i> {{ ref.title }}
                                                    {% elseif ref.company %}
                                                        <i class="fas fa-building me-2"></i> {{ ref.company }}
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="card bg-light border-0 p-4">
                                    <p class="text-muted">No references found.</p>
                                </div>
                            {% endif %}
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats (Hidden on Print) -->
        <div class="row mt-5 print-hide">
            <div class="col-md-3 col-6 text-center mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h1 class="display-4 fw-bold" style="color: var(--accent-color);">{{ yearsOfExperience }}+</h1>
                        <p class="text-muted">Years Experience</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 text-center mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h1 class="display-4 fw-bold" style="color: var(--accent-color);">{{ projectsCount }}</h1>
                        <p class="text-muted">Projects Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 text-center mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h1 class="display-4 fw-bold" style="color: var(--accent-color);">100%</h1>
                        <p class="text-muted">Client Satisfaction</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 text-center mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h1 class="display-4 fw-bold" style="color: var(--accent-color);">{{ totalTechnicalSkillsCount }}</h1>
                        <p class="text-muted">Technical Skills</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @media print {
        /* Hide unnecessary elements */
        .navbar, .footer, .scroll-top, .btn, .print-hide {
            display: none !important;
        }
        
        /* CRITICAL: Remove all top padding and margin */
        html, body {
            margin: 0 !important;
            padding: 0 !important;
            background: white !important;
        }
        
        .cv-section {
            padding-top: 0 !important;
            padding-bottom: 0px !important;
            margin-top: 0 !important;
            margin-bottom: 0 !important;
        }
        
        /* Remove text-center margin-bottom from header */
        .cv-section .container > .text-center {
            margin-bottom: 3px !important;
            padding-bottom: 0 !important;
        }
        
        /* Larger font sizes for single page */
        body {
            font-size: 12px !important;
            line-height: 1.35 !important;
        }
        
        h1.display-4 {
            font-size: 22px !important;
            margin: 0 !important;
            padding: 0 !important;
            margin-bottom: 2px !important;
            font-weight: 700 !important;
        }
        
        h2.section-title {
            font-size: 14px !important;
            margin: 0 !important;
            margin-bottom: 3px !important;
            padding-bottom: 2px !important;
            font-weight: 700 !important;
        }
        
        h4, h5 {
            font-size: 12px !important;
            margin: 0 !important;
            margin-bottom: 1px !important;
            font-weight: 600 !important;
        }
        
        p, .fs-5 {
            font-size: 11px !important;
            margin: 0 !important;
            margin-bottom: 2px !important;
        }
        
        .lead {
            font-size: 11px !important;
            margin: 0 !important;
            margin-bottom: 1px !important;
        }
        
        /* Reduce card padding significantly */
        .card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
            margin: 0 !important;
            margin-bottom: 2px !important;
        }
        
        .card-body {
            padding: 5px !important;
        }
        
        .card.bg-light.p-4 {
            padding: 5px !important;
        }
        
        .p-5 {
            padding: 8px !important;
        }
        
        /* Reduce margins significantly */
        .mb-5 {
            margin-bottom: 2px !important;
        }
        
        .mb-4, .mb-3 {
            margin-bottom: 1px !important;
        }
        
        .mt-3, .mt-4 {
            margin-top: 0px !important;
        }
        
        /* Smaller badges */
        .badge {
            font-size: 9px !important;
            padding: 1px 3px !important;
            margin: 0 !important;
        }
        
        .badge.fs-6 {
            font-size: 9px !important;
        }
        
        /* Progress bars smaller */
        .progress {
            height: 3px !important;
            margin: 0 !important;
            margin-bottom: 1px !important;
        }
        
        /* Contact info header */
        .contact-info p {
            font-size: 11px !important;
            margin: 0 !important;
            margin-bottom: 1px !important;
        }
        
        /* References section smaller */
        .card-title {
            font-size: 11px !important;
            margin: 0 !important;
            font-weight: 600 !important;
        }
        
        .card-text {
            font-size: 10px !important;
            margin: 0 !important;
        }
        
        /* Fit on one page */
        .container {
            max-width: 100% !important;
            padding: 0 7px !important;
        }
        
        /* Row spacing */
        .row {
            margin: 0 !important;
            margin-bottom: 0px !important;
        }
        
        /* Card hover remove */
        .card-hover {
            transform: none !important;
            box-shadow: none !important;
        }
        
        /* Section title after element */
        .section-title::after {
            height: 1px !important;
            width: 30px !important;
        }
        
        /* Page settings - Minimal margins */
        @page {
            size: A4;
            margin: 2mm 5mm 2mm 5mm;
        }
        
        /* Prevent page breaks and orphans */
        .card, .mb-5 {
            page-break-inside: avoid;
        }
        
        /* Remove all spacing from lists and divs */
        div {
            margin-top: 0 !important;
        }
        
        br {
            display: none;
        }
    }
</style>
{% endblock %}