{% extends 'base.html.twig' %}

{% block title %}About Me - Noely Bernard Mnyambwa{% endblock %}

{% block body %}
<section class="about-section" style="padding-top: 150px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="display-4 fw-bold mb-4" style="color: var(--primary-color);">About <span style="color: var(--accent-color);">Me</span></h1>
                <p class="lead mb-4">
                    I am a passionate IT professional with a Diploma in Computer Science and hands-on experience in networking, 
                    fiber installation, and technical support. Currently awaiting the issuance of my Bachelor's degree completion in 2025.
                </p>
                
                <div class="row mt-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle p-3 me-3">
                                <i class="fas fa-laptop text-white fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold">IT Specialist</h5>
                                <p class="text-muted mb-0">Network & Support</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-success rounded-circle p-3 me-3">
                                <i class="fas fa-wifi text-white fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold">Networking</h5>
                                <p class="text-muted mb-0">Fiber & Infrastructure</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="{{ path('app_contact') }}" class="btn btn-primary-custom me-3">
                        <i class="fas fa-paper-plane me-2"></i> Contact Me
                    </a>
                    <a href="{{ path('app_cv') }}" class="btn btn-outline-primary-custom">
                        <i class="fas fa-download me-2"></i> Download CV
                    </a>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <h3 class="fw-bold mb-4" style="color: var(--primary-color);">My Skills</h3>
                        
                        <!-- Technical Skills -->
                        <h5 class="fw-bold mt-4 mb-3" style="color: var(--secondary-color);">Technical Skills</h5>
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Networking & Troubleshooting</span>
                                <span>95%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" style="width: 95%"></div>
                            </div>
                        </div>
                        
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Fiber Installation</span>
                                <span>90%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-info" style="width: 90%"></div>
                            </div>
                        </div>
                        
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Technical Support</span>
                                <span>92%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-warning" style="width: 92%"></div>
                            </div>
                        </div>
                        
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Web Development</span>
                                <span>85%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-primary" style="width: 85%"></div>
                            </div>
                        </div>
                        
                        <!-- Soft Skills -->
                        <h5 class="fw-bold mt-4 mb-3" style="color: var(--secondary-color);">Soft Skills</h5>
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Team Collaboration</span>
                                <span>88%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-danger" style="width: 88%"></div>
                            </div>
                        </div>
                        
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Problem Solving</span>
                                <span>90%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-secondary" style="width: 90%"></div>
                            </div>
                        </div>
                        
                        <div class="skill-item mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Communication</span>
                                <span>85%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-dark" style="width: 85%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Experience Section -->
<section class="experience-section" style="background-color: #f8f9fa;">
    <div class="container">
        <h2 class="section-title">Experience & Education</h2>
        
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold mb-4" style="color: var(--primary-color);">
                            <i class="fas fa-briefcase me-2"></i> Work Experience
                        </h4>
                        
                        <div class="timeline">
                            {% if workExperience|length > 0 %}
                                {% for work in workExperience %}
                                    {% if work.isActive %}
                                    <div class="timeline-item mb-4">
                                        <div class="d-flex">
                                            <div class="timeline-icon me-3">
                                                <div class="bg-primary rounded-circle p-2">
                                                    <i class="fas fa-briefcase text-white"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h5 class="fw-bold mb-1">{{ work.position }}</h5>
                                                <p class="mb-1" style="font-weight: 900; color: #333; font-size: 1.05rem;">{{ work.company }}</p>
                                                <p class="text-muted mb-2">
                                                    {% if work.startDate %}{{ work.startDate|date('M Y') }}{% endif %}
                                                    {% if work.endDate %} - {{ work.endDate|date('M Y') }}{% endif %}
                                                    {% if work.isCurrent %}<span class="badge bg-success">Currently Working</span>{% endif %}
                                                </p>
                                                {% if work.description %}
                                                <p class="mb-0">{{ work.description|nl2br }}</p>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <div class="timeline-item">
                                    <p class="text-muted">No work experience records found.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold mb-4" style="color: var(--primary-color);">
                            <i class="fas fa-graduation-cap me-2"></i> Education
                        </h4>
                        
                        <div class="timeline">
                            {% if education|length > 0 %}
                                {% for edu in education %}
                                    {% if edu.isActive %}
                                    <div class="timeline-item mb-4">
                                        <div class="d-flex">
                                            <div class="timeline-icon me-3">
                                                <div class="bg-success rounded-circle p-2">
                                                    <i class="fas fa-graduation-cap text-white"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h5 style="font-weight: 900; color: #000; font-size: 1.15rem;">{{ edu.degree }}</h5>
                                                {% if edu.fieldOfStudy %}<p class="text-muted fw-bold mb-1">{{ edu.fieldOfStudy }}</p>{% endif %}
                                                <p class="mb-1" style="font-weight: 900; color: #333; font-size: 1.05rem;">{{ edu.school }}</p>
                                                {% if edu.gpa %}<p class="text-muted mb-2">GPA: {{ edu.gpa }}</p>{% endif %}
                                                {% if edu.description %}<p class="mb-0">{{ edu.description }}</p>{% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <div class="timeline-item">
                                    <p class="text-muted">No education records found.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Languages Section -->
<section class="languages-section">
    <div class="container">
        <h2 class="section-title">Languages</h2>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body p-5">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <h4 class="fw-bold mb-3" style="color: var(--primary-color);">English</h4>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Speaking</span>
                                        <span>Excellent</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 95%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Writing</span>
                                        <span>Excellent</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 92%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Reading</span>
                                        <span>Excellent</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 98%"></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <h4 class="fw-bold mb-3" style="color: var(--primary-color);">Swahili</h4>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Speaking</span>
                                        <span>Native</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Writing</span>
                                        <span>Native</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Reading</span>
                                        <span>Native</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}