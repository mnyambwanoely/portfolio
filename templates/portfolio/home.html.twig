{# templates/portfolio/home.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ personalDetails.fullName ?? 'Noely Bernard Mnyambwa' }} - Portfolio{% endblock %}

{% block body %}
<!-- Hero Section - Clean White Background -->
<section class="py-5" style="background: white; min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-2 order-lg-1">
                <span class="badge rounded-pill px-3 py-2 mb-3" style="background-color: var(--accent-color);">
                    <i class="bi bi-hand-wave me-1"></i> Hello, I'm
                </span>
                <h1 class="display-4 fw-bold mb-3" style="color: var(--primary-color);">
                    {{ personalDetails.fullName|default('Noely Bernard Mnyambwa') }}
                </h1>
                <p class="h5 mb-4" style="color: var(--secondary-color);">
                    IT Professional | Network Specialist | Developer
                </p>
                <p class="lead text-muted mb-4">
                    {{ personalDetails.professionalSummary|default('Passionate about technology with hands-on experience in IT support, networking, and web development.')|slice(0, 200) }}{% if personalDetails.professionalSummary|default('')|length > 200 %}...{% endif %}
                </p>
                <div class="d-flex flex-wrap gap-3 mb-4">
                    {% if personalDetails and personalDetails.cvPath %}
                    <a href="{{ path('app_download_cv') }}" class="btn btn-primary-custom" target="_blank">
                        <i class="bi bi-download me-2"></i> Download CV
                    </a>
                    {% else %}
                    <a href="{{ path('app_cv') }}" class="btn btn-primary-custom">
                        <i class="bi bi-file-person me-2"></i> View My CV
                    </a>
                    {% endif %}
                    <a href="{{ path('app_contact') }}" class="btn btn-outline-primary-custom">
                        <i class="bi bi-envelope me-2"></i> Contact Me
                    </a>
                </div>
                <!-- Contact Info -->
                <div class="d-flex flex-wrap gap-4 text-muted small">
                    <span><i class="bi bi-geo-alt-fill me-1" style="color: var(--accent-color);"></i> {{ personalDetails.location|default('Dar es Salaam') }}</span>
                    <span><i class="bi bi-telephone-fill me-1" style="color: var(--accent-color);"></i> {{ personalDetails.phone|default('+255 789 256 398') }}</span>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 text-center mb-5 mb-lg-0">
                <div class="position-relative d-inline-block hero-icon-box">
                    <div class="rounded-4 p-4" style="background: linear-gradient(135deg, var(--light-color) 0%, #e8f4f8 100%); transition: all 0.4s ease;">
                        <i class="bi bi-person-workspace" style="font-size: 12rem; color: var(--primary-color); opacity: 0.8; transition: all 0.4s ease;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Stats - Light Gray Background -->
<section class="py-5" style="background-color: var(--light-color);">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-6 col-md-3">
                <div class="bg-white rounded-4 p-4 shadow-lg h-100 stat-card border-0">
                    <h2 class="display-5 fw-bold" style="color: var(--primary-color);">{{ yearsOfExperience }}+</h2>
                    <p class="text-muted mb-0 small">Years Experience</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="bg-white rounded-4 p-4 shadow-lg h-100 stat-card border-0">
                    <h2 class="display-5 fw-bold" style="color: var(--secondary-color);">{{ projectsCount }}+</h2>
                    <p class="text-muted mb-0 small">Projects Done</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="bg-white rounded-4 p-4 shadow-lg h-100 stat-card border-0">
                    <h2 class="display-5 fw-bold" style="color: var(--accent-color);">{{ totalSkillsCount }}+</h2>
                    <p class="text-muted mb-0 small">Skills</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="bg-white rounded-4 p-4 shadow-lg h-100 stat-card border-0">
                    <h2 class="display-5 fw-bold" style="color: var(--success-color);">100%</h2>
                    <p class="text-muted mb-0 small">Dedication</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- What I Do - White Background -->
<section class="py-5" style="background: white;">
    <div class="container">
        <h2 class="section-title">What I Do</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center p-4 rounded-4 service-card shadow-lg border-0">
                    <div class="mb-3 service-icon">
                        <i class="bi bi-pc-display-horizontal" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    </div>
                    <h5 class="fw-bold" style="color: var(--primary-color);">IT Support</h5>
                    <p class="text-muted small">Hardware troubleshooting, software installation, and technical assistance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center p-4 rounded-4 service-card shadow-lg border-0">
                    <div class="mb-3 service-icon">
                        <i class="bi bi-hdd-network" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    </div>
                    <h5 class="fw-bold" style="color: var(--primary-color);">Networking</h5>
                    <p class="text-muted small">Network setup, fiber optics installation, and maintenance services.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center p-4 rounded-4 service-card shadow-lg border-0">
                    <div class="mb-3 service-icon">
                        <i class="bi bi-code-slash" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    </div>
                    <h5 class="fw-bold" style="color: var(--primary-color);">Web Development</h5>
                    <p class="text-muted small">Creating responsive websites and web applications.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section - Light Background -->
<section class="py-5" style="background-color: var(--light-color);">
    <div class="container">
        <h2 class="section-title">My Skills</h2>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="bg-white rounded-4 p-4 shadow-lg skills-card border-0">
                    {% set softSkillsDb = skills|filter(s => s.category == 'soft') %}
                    {% set technicalSkillsDb = skills|filter(s => s.category == 'technical') %}
                    <div class="row">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <h6 class="fw-bold mb-3" style="color: var(--primary-color);">
                                <i class="bi bi-tools me-2"></i>Technical Skills
                            </h6>
                            <div class="d-flex flex-wrap gap-2">
                                {# Database technical skills #}
                                {% for skill in technicalSkillsDb %}
                                    <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">
                                        {{ skill.name }}
                                    </span>
                                {% endfor %}
                                {# Hardcoded technical skills (always show) #}
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">Troubleshooting</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">Networking</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">Fiber Optics</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">Web Development</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--secondary-color);">IT Support</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold mb-3" style="color: var(--primary-color);">
                                <i class="bi bi-person-check me-2"></i>Soft Skills
                            </h6>
                            <div class="d-flex flex-wrap gap-2">
                                {# Database soft skills #}
                                {% for skill in softSkillsDb %}
                                    <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">
                                        {{ skill.name }}
                                    </span>
                                {% endfor %}
                                {# Hardcoded soft skills (always show) #}
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">Teamwork</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">Communication</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">Problem Solving</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">Time Management</span>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: var(--accent-color);">Adaptability</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact CTA - Primary Color Background -->
<section class="py-5 mb-0" style="background-color: var(--primary-color); margin-bottom: -100px !important;">
    <div class="container text-center">
        <h3 class="text-white fw-bold mb-3">Interested in working together?</h3>
        <p class="text-white-50 mb-4">Let's discuss your next project</p>
        <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg px-5">
            <i class="bi bi-chat-dots me-2"></i> Get in Touch
        </a>
    </div>
</section>

<style>
    /* Stat Cards Hover Effects */
    .stat-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .stat-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
    }
    
    /* Service Cards Hover Effects */
    .service-card {
        background: white;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .service-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 1.5rem 3rem rgba(0, 0, 0, 0.2) !important;
        border-color: var(--accent-color);
    }
    
    .service-card .service-icon {
        transition: all 0.4s ease;
    }
    
    .service-card:hover .service-icon {
        transform: scale(1.15) rotate(5deg);
    }
    
    .service-card:hover .service-icon i {
        color: var(--accent-color) !important;
    }
    
    /* Project Cards Hover Effects */
    .project-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        overflow: hidden;
    }
    
    .project-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.25) !important;
    }
    
    .project-card:hover .card-img-top {
        transform: scale(1.08);
    }
    
    .project-card .card-img-top {
        transition: transform 0.5s ease;
    }
    
    /* Hero Icon Box Hover */
    .hero-icon-box .rounded-4 {
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.1);
    }
    
    .hero-icon-box:hover .rounded-4 {
        transform: scale(1.05) rotate(2deg);
        box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.2);
    }
    
    .hero-icon-box:hover i {
        color: var(--accent-color) !important;
        opacity: 1 !important;
    }
    
    /* Skills Card Hover */
    .badge.rounded-pill {
        transition: all 0.3s ease;
        cursor: default;
    }
    
    .badge.rounded-pill:hover {
        transform: scale(1.1);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    /* Skills Card Hover */
    .skills-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    
    .skills-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 1.5rem 3rem rgba(0, 0, 0, 0.2) !important;
    }
    
    /* Contact CTA Button Hover */
    .btn-light:hover {
        transform: scale(1.05);
        box-shadow: 0 0.5rem 2rem rgba(255, 255, 255, 0.3);
    }
    
    /* Card Image Container Overflow Hidden */
    .card {
        overflow: hidden;
    }
    
    /* Smooth animations for all interactive elements */
    .btn-primary-custom,
    .btn-outline-primary-custom {
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    
    .btn-primary-custom:hover,
    .btn-outline-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1.5rem rgba(26, 188, 156, 0.4);
    }
</style>
{% endblock %}