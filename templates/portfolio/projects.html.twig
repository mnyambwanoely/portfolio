{% extends 'base.html.twig' %}

{% block title %}My Projects - Portfolio{% endblock %}

{% block body %}
<section class="projects-page-section" style="padding-top: 150px;">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold" style="color: var(--primary-color);">My <span style="color: var(--accent-color);">Projects</span></h1>
            <p class="lead text-muted">Explore my latest work and technical projects</p>
        </div>

        <!-- Filter Buttons -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <button class="btn btn-primary-custom active" data-filter="all">
                        All Projects
                    </button>
                    <button class="btn btn-outline-primary-custom" data-filter="web">
                        Web Development
                    </button>
                    <button class="btn btn-outline-primary-custom" data-filter="network">
                        Networking
                    </button>
                    <button class="btn btn-outline-primary-custom" data-filter="other">
                        Other
                    </button>
                </div>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="row g-4" id="projects-container">
            {% for project in projects %}
            <div class="col-lg-4 col-md-6">
                <div class="card card-hover h-100">
                    {% if project.screenshotPath %}
                    <img src="{{ asset('uploads/projects/' ~ project.screenshotPath) }}" class="card-img-top" alt="{{ project.title }}" style="height: 250px; object-fit: cover;">
                    {% elseif project.imageUrl %}
                    <img src="{{ project.imageUrl }}" class="card-img-top" alt="{{ project.title }}" style="height: 250px; object-fit: cover;">
                    {% else %}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                        <i class="fas fa-project-diagram fa-3x text-muted"></i>
                    </div>
                    {% endif %}
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-{{ project.getCategoryBadgeColor() }}">{{ project.category|capitalize }}</span>
                            <small class="text-muted">{{ project.projectDate ? project.projectDate|date('Y') : project.createdAt|date('Y') }}</small>
                        </div>
                        
                        <h5 class="card-title fw-bold" style="color: var(--primary-color);">{{ project.title }}</h5>
                        <p class="card-text text-muted">{{ project.description }}</p>
                        
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3" style="color: var(--accent-color);">
                                <i class="fas fa-tools me-2"></i>Technologies
                            </h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% set techs = project.technologiesArray is defined ? project.technologiesArray : (project.technologies ? project.technologies|split(',') : ['PHP','Symfony','Bootstrap']) %}
                                {% for tech in techs %}
                                <span class="badge bg-light text-dark border">{{ tech }}</span>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a href="{{ project.liveUrl }}" class="btn btn-primary-custom btn-sm" target="_blank">
                                <i class="fas fa-eye me-2"></i> View Project
                            </a>
                            <div class="project-links">
                                {% if project.liveUrl %}
                                <a href="{{ project.liveUrl }}" class="btn btn-outline-secondary btn-sm" target="_blank">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                                {% endif %}
                                {% if project.githubUrl %}
                                <a href="{{ project.githubUrl }}" class="btn btn-outline-dark btn-sm" target="_blank">
                                    <i class="fab fa-github"></i>
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Empty State -->
            <div class="col-12 text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-folder-open display-1 text-muted mb-4"></i>
                    <h3 class="mb-3" style="color: var(--primary-color);">No Projects Found</h3>
                    <p class="text-muted mb-4">No projects available yet.</p>
                    <a href="{{ path('app_contact') }}" class="btn btn-primary-custom">
                        <i class="fas fa-plus me-2"></i> Start a Project
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Stats Section -->
        <div class="row mt-5 pt-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <div class="row text-center">
                            <div class="col-md-3 col-6 mb-4">
                                <div class="stat-item">
                                    <h2 class="display-4 fw-bold" style="color: var(--accent-color);">{{ projects|length }}</h2>
                                    <p class="text-muted">Total Projects</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-4">
                                <div class="stat-item">
                                    <h2 class="display-4 fw-bold" style="color: var(--accent-color);">{{ projects|length }}</h2>
                                    <p class="text-muted">Published</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-4">
                                <div class="stat-item">
                                    <h2 class="display-4 fw-bold" style="color: var(--accent-color);">{{ projects|filter(p => p.category == 'web')|length }}</h2>
                                    <p class="text-muted">Web Projects</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-4">
                                <div class="stat-item">
                                    <h2 class="display-4 fw-bold" style="color: var(--accent-color);">{{ projects|filter(p => p.category == 'network')|length }}</h2>
                                    <p class="text-muted">Network Projects</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);">
                    <div class="card-body p-5 text-white">
                        <h2 class="fw-bold mb-4">Have a Project in Mind?</h2>
                        <p class="lead mb-4">Let's work together to bring your ideas to life with cutting-edge technology solutions.</p>
                        <a href="{{ path('app_contact') }}" class="btn btn-light btn-lg px-5">
                            <i class="fas fa-chat-dots me-2"></i> Start a Project
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .card-hover {
        transition: all 0.3s ease;
    }
    
    .card-hover:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }
    
    .empty-state {
        padding: 3rem 1rem;
        background: #f8f9fa;
        border-radius: 10px;
        border: 2px dashed #dee2e6;
    }
    
    .stat-item {
        padding: 1rem;
    }
    
    .project-links .btn {
        padding: 5px 10px;
        margin-left: 5px;
    }
    
    .btn-outline-primary-custom {
        border: 2px solid var(--secondary-color);
        color: var(--secondary-color);
        background: transparent;
        transition: all 0.3s ease;
    }
    
    .btn-outline-primary-custom:hover,
    .btn-outline-primary-custom.active {
        background: var(--secondary-color);
        color: white;
        transform: translateY(-3px);
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add animation to project cards
    const cards = document.querySelectorAll('.card-hover');
    cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.classList.add('fade-in-up');
    });
    
    // Filter functionality
    const filterButtons = document.querySelectorAll('[data-filter]');
    const projects = document.querySelectorAll('#projects-container > .col-lg-4');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Update active button
            filterButtons.forEach(btn => btn.classList.remove('active', 'btn-primary-custom'));
            filterButtons.forEach(btn => btn.classList.add('btn-outline-primary-custom'));
            
            this.classList.remove('btn-outline-primary-custom');
            this.classList.add('active', 'btn-primary-custom');
            
            // Filter projects
            const filterValue = this.getAttribute('data-filter');
            
            projects.forEach(project => {
                const category = project.querySelector('.badge').textContent.toLowerCase();
                
                if (filterValue === 'all' || category.includes(filterValue)) {
                    project.style.display = 'block';
                    setTimeout(() => {
                        project.style.opacity = '1';
                        project.style.transform = 'translateY(0)';
                    }, 100);
                } else {
                    project.style.opacity = '0';
                    project.style.transform = 'translateY(20px)';
                    setTimeout(() => {
                        project.style.display = 'none';
                    }, 300);
                }
            });
        });
    });
    
    // Add animation to project cards
    projects.forEach(project => {
        project.style.transition = 'all 0.3s ease';
    });
});
</script>
{% endblock %}