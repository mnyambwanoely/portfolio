{% extends 'admin/base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="admin-card p-4">
                <h5>Update Your Profile</h5>
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.fullName) }}
                    {{ form_widget(form.fullName) }}
                    {{ form_errors(form.fullName) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.avatarColor) }}
                    {{ form_widget(form.avatarColor) }}
                    <small class="form-text text-muted">Pick a hex color for your avatar background (e.g., #3498db)</small>
                    {{ form_errors(form.avatarColor) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.isActive) }}
                    {{ form_widget(form.isActive) }}
                    {{ form_errors(form.isActive) }}
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a href="{{ path('admin_profile') }}" class="btn btn-secondary">Cancel</a>
                    {{ form_widget(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
