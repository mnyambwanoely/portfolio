{% extends 'admin/base.html.twig' %}

{% block title %}Personal Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Personal Details</h1>
        <a href="{{ path('admin_personal_details_new') }}" class="btn btn-primary">Add New</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if details is empty %}
                <p>No personal details added yet.</p>
            {% else %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for p in details %}
                            <tr>
                                <td>{{ p.fullName }}</td>
                                <td>{{ p.email }}</td>
                                <td>{{ p.phone }}</td>
                                <td>{{ p.updatedAt ? p.updatedAt|date('Y-m-d H:i') : '-' }}</td>
                                <td>
                                    <a href="{{ path('admin_personal_details_edit', {'id': p.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form method="post" action="{{ path('admin_personal_details_delete', {'id': p.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-personal-' ~ p.id) }}">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}