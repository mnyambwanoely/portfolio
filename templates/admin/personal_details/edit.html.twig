{% extends 'admin/base.html.twig' %}

{% block title %}Edit Personal Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Edit Personal Details</h1>
        <a href="{{ path('admin_personal_details') }}" class="btn btn-secondary">Back to list</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(form.fullName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.jobTitle) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.phone2) }}
            {{ form_row(form.location) }}
            {{ form_row(form.address) }}
            {{ form_row(form.professionalSummary) }}
            {{ form_row(form.yearsOfExperience) }}

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Update Details</button>
                <a href="{{ path('admin_personal_details') }}" class="btn btn-link">Cancel</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}