<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    
    <!-- Bootstrap 5 Dark -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <!-- Custom Admin CSS -->
    <style>
        :root {
            --admin-primary: #3498db;
            --admin-secondary: #2c3e50;
            --admin-accent: #1abc9c;
            --admin-dark: #1a1a2e;
            --admin-light: #f8f9fa;
            --admin-success: #00b894;
            --admin-warning: #fdcb6e;
            --admin-danger: #e17055;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--admin-dark);
            color: var(--admin-light);
            min-height: 100vh;
        }
        
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--admin-secondary) 0%, #1a1a2e 100%);
            box-shadow: 3px 0 10px rgba(0,0,0,0.2);
            position: fixed;
            width: 250px;
            z-index: 1000;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
        }
        
        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .user-info {
            padding: 20px;
            text-align: center;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 24px;
            color: white;
        }
        
        .sidebar-nav .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 12px 20px;
            border-radius: 5px;
            margin: 5px 10px;
            transition: all 0.3s ease;
        }
        
        .sidebar-nav .nav-link:hover {
            color: white;
            background: rgba(255,255,255,0.1);
        }
        
        .sidebar-nav .nav-link.active {
            color: white;
            background: var(--admin-primary);
        }
        
        .sidebar-nav .nav-link i {
            width: 20px;
            margin-right: 10px;
            text-align: center;
        }
        
        .admin-card {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }
        
        .admin-table {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .admin-table table {
            margin-bottom: 0;
        }
        
        .admin-table thead th {
            border-bottom: 2px solid rgba(255,255,255,0.1);
            color: var(--admin-light);
            font-weight: 600;
        }
        
        .admin-table tbody td {
            border-color: rgba(255,255,255,0.05);
            color: rgba(255,255,255,0.8);
        }
        
        .admin-table tbody tr:hover {
            background: rgba(255,255,255,0.05);
        }
        
        .btn-admin-primary {
            background: var(--admin-primary);
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        .btn-admin-primary:hover {
            background: #2980b9;
            transform: translateY(-2px);
            color: white;
        }
        
        .btn-admin-success {
            background: var(--admin-success);
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        .btn-admin-success:hover {
            background: #00a085;
            transform: translateY(-2px);
            color: white;
        }
        
        .btn-admin-danger {
            background: var(--admin-danger);
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        .btn-admin-danger:hover {
            background: #d65c42;
            transform: translateY(-2px);
            color: white;
        }
        
        .badge-admin {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }
        
        .badge-published {
            background: var(--admin-success);
            color: white;
        }
        
        .badge-draft {
            background: var(--admin-warning);
            color: #333;
        }
        
        .badge-new {
            background: var(--admin-primary);
            color: white;
        }
        
        .badge-read {
            background: var(--admin-success);
            color: white;
        }
        
        .form-control-admin {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            color: var(--admin-light);
            border-radius: 5px;
        }
        
        .form-control-admin:focus {
            background: rgba(255,255,255,0.08);
            border-color: var(--admin-primary);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            color: var(--admin-light);
        }
        
        .form-label-admin {
            color: rgba(255,255,255,0.8);
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .sidebar.active {
                width: 250px;
            }
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h4 class="mb-0 text-center">
                <i class="fas fa-lock me-2"></i> Admin Panel
            </h4>
        </div>
        
        <div class="user-info">
            <div class="user-avatar" style="background-color: {{ app.user.avatarColor ?? '#3498db' }};">
                {{ app.user.initials ?? 'AD' }}
            </div>
            <h6 class="mb-1">{{ app.user.fullName ?? 'Admin User' }}</h6>
            <small class="text-muted">{{ app.user.email ?? 'admin@example.com' }}</small>
        </div>
        
        <nav class="sidebar-nav mt-4">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'admin_dashboard' %}active{% endif %}" 
                       href="{{ path('admin_dashboard') }}">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_project' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_projects') }}">
                        <i class="fas fa-project-diagram"></i> Projects
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_skill' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_skills') }}">
                        <i class="fas fa-star"></i> Skills & Interests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_personal_details' in app.request.attributes.get('_route') or 'admin_personal_details_' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_personal_details') }}">
                        <i class="fas fa-id-card"></i> Personal Details
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_education' in app.request.attributes.get('_route') or 'admin_education_' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_education') }}">
                        <i class="fas fa-graduation-cap"></i> Education
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_work_experience' in app.request.attributes.get('_route') or 'admin_work_experience_' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_work_experience') }}">
                        <i class="fas fa-briefcase"></i> Work Experience
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_reference' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_references') }}">
                        <i class="fas fa-users"></i> References
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_message' in app.request.attributes.get('_route') %}active{% endif %}" 
                       href="{{ path('admin_messages') }}">
                        <i class="fas fa-envelope"></i> Messages
                        {% set unreadCount = 0 %}
                        {% if unreadCount > 0 %}
                        <span class="badge bg-danger float-end">{{ unreadCount }}</span>
                        {% endif %}
                    </a>
                </li>
                <li class="nav-item">
                    <form method="post" action="{{ path('admin_logout') }}" style="display:inline; margin-left:0;">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_logout') }}">
                        <button type="submit" class="nav-link btn btn-link text-danger p-0" style="text-align:left;">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-info" href="{{ path('app_home') }}" target="_blank">
                        <i class="fas fa-external-link-alt"></i> View Site
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Mobile Toggle -->
        <button class="btn btn-admin-primary d-md-none mb-3" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        
        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery & DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- Custom Admin JS -->
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });
        
        // Initialize DataTables
        $(document).ready(function() {
            $('.data-table').DataTable({
                pageLength: 10,
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
        
        // Confirm delete actions
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('confirm-delete')) {
                if (!confirm('Are you sure you want to delete this item? This action cannot be undone.')) {
                    e.preventDefault();
                }
            }
        });
    </script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>