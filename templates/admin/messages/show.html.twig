{% extends 'admin/base.html.twig' %}

{% block title %}Message Details{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Message Details</h1>
        <div>
            <a href="{{ path('admin_messages') }}" class="btn btn-secondary">Back to list</a>
            <form action="{{ path('admin_message_delete', {'id': message.id}) }}" method="post" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-message-' ~ message.id) }}">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this message?')">Delete</button>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <h4>{{ message.subject }}</h4>
            <p class="text-muted small">From: {{ message.name }} &lt;{{ message.email }}&gt; â€” {{ message.createdAt|date('Y-m-d H:i') }}</p>
            <hr>
            <p>{{ message.message|nl2br }}</p>
        </div>
    </div>
</div>
{% endblock %}