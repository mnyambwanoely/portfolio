{% extends 'admin/base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Contact Messages</h1>
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Back to dashboard</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if messages|length > 0 %}
                <div class="list-group">
                    {% for message in messages %}
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="mb-1">{{ message.subject }}</h5>
                                <small class="text-muted">From: {{ message.name }} &lt;{{ message.email }}&gt;</small>
                                <p class="mb-0 mt-2">{{ message.message|slice(0, 200) }}{% if message.message|length > 200 %}...{% endif %}</p>
                            </div>
                            <div class="text-end">
                                <small class="text-muted d-block">{{ message.createdAt|date('Y-m-d H:i') }}</small>
                                <div class="mt-2">
                                    <a href="{{ path('admin_message_show', {'id': message.id}) }}" class="btn btn-outline-primary btn-sm">View</a>
                                    <form action="{{ path('admin_message_delete', {'id': message.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-message-' ~ message.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this message?')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-envelope-open fa-3x text-muted mb-3"></i>
                    <h5>No messages yet</h5>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}