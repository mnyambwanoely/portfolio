{% extends 'admin/base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Projects</h1>
        <a href="{{ path('admin_project_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> New Project
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if projects|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for project in projects %}
                            <tr>
                                <td>{{ project.title }}</td>
                                <td>
                                    {% if project.category is defined %}
                                        <span class="badge bg-secondary">{{ project.category }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ project.createdAt|date('Y-m-d') }}</td>
                                <td>
                                    {% if project.isPublished %}
                                        <span class="badge bg-success">Published</span>
                                    {% else %}
                                        <span class="badge bg-warning">Draft</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_project_edit', {id: project.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('admin_project_delete', {id: project.id}) }}" method="post" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-project-' ~ project.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                    <h5>No projects found</h5>
                    <p class="text-muted">Create your first project to get started</p>
                    <a href="{{ path('admin_project_new') }}" class="btn btn-primary">Create Project</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}