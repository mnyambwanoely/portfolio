{% extends 'admin/base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Edit Project</h1>
        <a href="{{ path('admin_projects') }}" class="btn btn-secondary">Back to list</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.technologies) }}
                    {{ form_row(form.screenshotPath) }}
                    
                    {% if project.screenshotPath %}
                    <div class="mt-3">
                        <label class="form-label">Current Screenshot</label>
                        <div class="card">
                            <img src="{{ asset('uploads/projects/' ~ project.screenshotPath) }}" alt="{{ project.title }}" class="img-fluid" style="max-height: 300px;">
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a href="{{ path('admin_projects') }}" class="btn btn-link">Cancel</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}