{% extends 'admin/base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Skills</h1>
        <a href="{{ path('admin_skill_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> New Skill
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if skills|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Level</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for skill in skills %}
                            <tr>
                                <td>{{ skill.name }}</td>
                                <td>{{ skill.percentage }}%</td>
                                <td>{{ skill.category }}</td>
                                <td>
                                    {% if skill.isActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-warning">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_skill_edit', {id: skill.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('admin_skill_delete', {id: skill.id}) }}" method="post" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-skill-' ~ skill.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-star fa-3x text-muted mb-3"></i>
                    <h5>No skills found</h5>
                    <p class="text-muted">Add your first skill to get started</p>
                    <a href="{{ path('admin_skill_new') }}" class="btn btn-primary">Add Skill</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}