{% extends 'admin/base.html.twig' %}

{% block title %}Add Reference{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Add New Reference</h1>
        <a href="{{ path('admin_references') }}" class="btn btn-secondary">Back to list</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.name) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.company) }}
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Add Reference</button>
                <a href="{{ path('admin_references') }}" class="btn btn-link">Cancel</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
