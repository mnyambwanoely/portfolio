{% extends 'admin/base.html.twig' %}

{% block title %}References{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">References</h1>
        <a href="{{ path('admin_reference_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Add Reference
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            {% if references|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Company</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Order</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ref in references %}
                            <tr>
                                <td>{{ ref.name }}</td>
                                <td>{{ ref.title }}</td>
                                <td>{{ ref.company ?? '-' }}</td>
                                <td>
                                    {% if ref.email %}
                                        <a href="mailto:{{ ref.email }}">{{ ref.email }}</a>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>{{ ref.phone ?? '-' }}</td>
                                <td>
                                    {% if ref.isActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>{{ ref.displayOrder ?? '0' }}</td>
                                <td>
                                    <a href="{{ path('admin_reference_edit', {id: ref.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('admin_reference_delete', {id: ref.id}) }}" method="post" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-reference-' ~ ref.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5>No references found</h5>
                    <p class="text-muted">Create your first reference to get started</p>
                    <a href="{{ path('admin_reference_new') }}" class="btn btn-primary">Add Reference</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
